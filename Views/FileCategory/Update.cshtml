@model TechArchFillingSystem.Models.GeneralViewModel
@{
    ViewData["Title"] = "Update";
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">File Type Category</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update</li>
    </ol>
</nav>

<h1>Update</h1>

<div class="card">
    <div class="card-header">
        <p class="info">@ViewBag.Message</p>
        <div class="row">
            <div class="col-12 text-right">
                <a asp-action="Index" class="btn btn-sm btn-simple m-2 animation-on-hover">  <i class="tim-icons icon-bullet-list-67"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="FileTypeCategory.FileTypeCategoryId" hidden />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">File Type Category</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="tim-icons icon-single-02"></i>
                            </div>
                        </div>
                        <input type="text" class="form-control" asp-for="FileTypeCategory.FileTypeCategoryDescription">
                        <span asp-validation-for="FileTypeCategory.FileTypeCategoryDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">File Type</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="tim-icons icon-single-02"></i>
                            </div>
                        </div>
                        <select class="form-control" required asp-for="@Model.FileTypeCategory.FileTypeId"
                                asp-items="@(new SelectList(Model.FileTypes, "FileTypeId", "FileTypeDescription") )"></select>
                                <span asp-validation-for="FileTypeCategory.FileTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary text-right">Save</button>
        </form>
    </div>
</div>
