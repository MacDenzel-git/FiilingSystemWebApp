@model IEnumerable<TFSDataAccessLayer.DTO.FileTypeCategoryDTO>

@{
    ViewData["Title"] = "File Type Category";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0">File Type Category</h4>
                        <p class="card-category">Below is a list of all file categories. Click on details for more information</p>
                        <div class="row">
                            <div class="col-12 text-right">
                                <a asp-action="Create" class="btn btn-sm btn-simple btn-outline-info m-2 animation-on-hover"><i class="tim-icons icon-simple-add"></i> Add New</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="dtBasicExample" class="table table-hover dataTable">
                                <thead class="font-weight-bold text-primary">
                               <tr>
                                <th>
                                    File Type Category
                                </th>
                                <th>
                                    File Type
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Date Created
                                </th>
                                <th class="text-right">
                                    Actions
                                </th>
                                </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ToList().OrderByDescending(item => item.DateCreated))
                                    {
                                        <tr>
                                             <td>@Html.DisplayFor(modelItme => item.FileTypeCategoryDescription)</td>
                                            <td>@Html.DisplayFor(modelItme => item.FileTypeId)</td>
                                            @if (item.IsActive)
                                            {
                                                <td class="active">Active</td>
                                            }
                                            else
                                            {
                                                <td class="disabled">Disabled</td>
                                            }
                                            <td>@Html.DisplayFor(modelItme => item.DateCreated)</td>
                                            <td class="td-actions text-right">
                                                <a class="btn btn-info animation-on-hover btn-fab btn-icon btn-round" type="button" rel="tooltip" class="btn btn-danger btn-link btn-icon btn-sm" asp-action="Update" asp-route-categoryId="@item.FileTypeCategoryId">
                                                    <i class="material-icons">update</i>
                                                </a>
                                                |
                                                <a class="btn btn-info animation-on-hover btn-fab btn-icon btn-round" onclick="ConfirmFunction(@item.FileTypeCategoryId)">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
