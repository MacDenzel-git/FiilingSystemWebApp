@model IEnumerable<TFSDataAccessLayer.DTO.DepartmentDTO>

@{
    ViewData["Title"] = "Companies";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0">Departments</h4>
                        <p class="card-category">Below is a list of Departments. Click on details for more information</p>
                        <div class="row">
                            <div class="col-12 text-right">
                                <a asp-action="Create" class="btn btn-sm btn-simple btn-outline-info m-2 animation-on-hover"><i class="tim-icons icon-simple-add"></i> Add New</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="dtBasicExample" class="table table-hover dataTable">
                                <thead class="font-weight-bold text-primary">
                                    <tr>
                                        <th>Department Name</th>
                                         <th class="text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ToList().OrderBy(item => item.DepartmentName))
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItme => item.DepartmentName)</td>
                                           
                                       <td class="td-actions text-right">
                                                <a class="btn btn-info animation-on-hover btn-fab btn-icon btn-round" 
                                                type="button" rel="tooltip" data-toggle="tooltip" data-placement="top"
                                                title="update file type" asp-action="Update" asp-route-typeId="@item.DepartmentId">
                                                    <i class="material-icons">update</i>
                                                </a>
                                                |
                                                <a class="btn btn-info animation-on-hover btn-fab btn-icon btn-round" 
                                                type="button" rel="tooltip" data-toggle="tooltip"
                                                data-placement="bottom" title="delete file type" onclick="ConfirmFunction(@item.DepartmentId)">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
