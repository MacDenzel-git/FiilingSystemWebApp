@model TechArchFillingSystem.Models.GeneralViewModel
@{
    ViewData["Title"] = "Update";
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Department</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update</li>
    </ol>
</nav>

<h1>Update</h1>

<div class="card">
    <div class="card-header">
        <p class="info">@ViewBag.Message</p>
        <div class="row">
            <div class="col-12 text-right">
                <a asp-action="Index" class="btn btn-sm btn-simple m-2 animation-on-hover">  <i class="tim-icons icon-bullet-list-67"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                 <div class="form-group col-md-6">
                    <label for="fileType">Subsidiary</label>
                    <div class="input-group">
                        <select class="form-control form-control-sm" required asp-for="@Model.Department.SubsidiaryCompanyId"
                                asp-items="@(new SelectList(Model.SubsidiaryCompanies, "SubsidiaryCompanyId", "SubsidiaryCompanyName") )"></select>                     
                                <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <input asp-for="@Model.Department.SubsidiaryCompanyId" hidden />
                    <input asp-for="@Model.Department.DepartmentId" hidden />
                    <input asp-for="@Model.Department.CreatedBy" hidden />
                    <input asp-for="@Model.Department.CreatedDate" hidden />
                    <label for="fileType">Subsidiary Company Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="@Model.Department.DepartmentName" placeholder="Enter File Type Description" required>
                        <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
